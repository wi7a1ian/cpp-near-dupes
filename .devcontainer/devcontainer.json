{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "ubuntu-22.04" }
	},
	"runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"ms-vscode.cpptools-extension-pack"
			]
		}
	},
	"postCreateCommand": "bunzip2 -k /workspaces/cpp-near-dupes/data/enron100k.csv.bz2 && mkdir /tmp/ndd-cache",
	"remoteUser": "vscode"
}
